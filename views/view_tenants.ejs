<%- include ('partials/header') %>

    <header>
        <div class="container-fluid bg-dark">
            <div class="row">
                <div class="col-xs-12 col-md-12">
                    <h1 class="text-uppercase text-white text-center">
                        <a href="/" class="nav-link text-white">
                            <i class="fa fa-home"></i>&nbsp;&nbsp; simple hostel
                        </a>
                    </h1>
                </div>
            </div>
        </div>
    </header>
    
    <div class="container">
        <section class="m-5">
            <div class="row">
                <div class="col-xs-12 col-md-12">
                    <h4 class="text-center text-uppercase"> <i class="fa fa-users"></i> 
                        all tenants
                    </h4>
                </div>
            </div>
            <div class="row">
                <table class="table table-hover">
                    <thead class="thead-light">
                        <th>Room Number</th>
                        <th>Full Name</th>
                        <th>Occupation</th>
                        <th>Phone Number</th>
                        <th>Gender</th>
                        <th>Tenancy Period</th>
                        <th>Actions</th>
                    </thead>
                    <tbody>
                        <% for (let i = 0; i < tenant.length; i++) { %>
                            <tr>
                                <td class="text-center"><%= tenant[i].room_no %></td>
                                <td><%= tenant[i].first_name %> <%= tenant[i].last_name %></td>
                                <td><%= tenant[i].occupation %></td>
                                <td><%= tenant[i].phone_no %></td>
                                <td><%= tenant[i].gender %></td>
                                <td><%= tenant[i].tenancy %></td>
                                <td> 
                                    <a href="edit/<%= tenant[i]._id %>" class="text-primary" onclick="deleteTenant()"><i class="fa fa-user-edit"></i></a> &nbsp;
                                    <a href="delete/<%= tenant[i]._id %>" class="deleteTenant"><i class="fa fa-user-times text-danger"></i></a>
                                </td>
                             </tr> 
                        <% } %>
                    </tbody>
                </table>
                <br>
                <a href="/" class=" btn btn-outline-success sym-btn-2">Add New Tenant</a> 
            </div>
        </section>
    </div>


